<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009688"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:subtitle="@string/app_name"
        app:subtitleTextColor="#FFFFFF" />

    <TextView
        android:id="@+id/textoResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColorLink="#009688"
        android:textSize="21sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15px"
            android:layout_weight="1"
            android:backgroundTint="#C1C1C1"
            android:text="1"
            android:textColor="#000000"
            android:textColorLink="#C1C1C1"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="15px" />

        <Button
            android:id="@+id/boton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15px"
            android:layout_weight="1"
            android:backgroundTint="#C1C1C1"
            android:text="2"
            android:textColor="#000000"
            android:textColorLink="#C1C1C1"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="15px" />

        <Button
            android:id="@+id/boton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15px"
            android:layout_weight="1"
            android:backgroundTint="#C1C1C1"
            android:text="3"
            android:textColor="#000000"
            android:textColorLink="#C1C1C1"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="15px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15px"
            android:layout_weight="1"
            android:backgroundTint="#C1C1C1"
            android:text="4"
            android:textColor="#000000"
            android:textColorLink="#C1C1C1"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="15px" />

        <Button
            android:id="@+id/boton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15px"
            android:layout_weight="1"
            android:backgroundTint="#C1C1C1"
            android:text="5"
            android:textColor="#000000"
            android:textColorLink="#C1C1C1"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="15px" />

        <Button
            android:id="@+id/boton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15px"
            android:layout_weight="1"
            android:backgroundTint="#C1C1C1"
            android:text="6"
            android:textColor="#000000"
            android:textColorLink="#C1C1C1"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="15px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15px"
            android:layout_weight="1"
            android:backgroundTint="#C1C1C1"
            android:text="7"
            android:textColor="#000000"
            android:textColorLink="#C1C1C1"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="15px" />

        <Button
            android:id="@+id/boton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15px"
            android:layout_weight="1"
            android:backgroundTint="#C1C1C1"
            android:text="8"
            android:textColor="#000000"
            android:textColorLink="#C1C1C1"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="15px" />

        <Button
            android:id="@+id/boton9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15px"
            android:layout_weight="1"
            android:backgroundTint="#C1C1C1"
            android:text="9"
            android:textColor="#000000"
            android:textColorLink="#C1C1C1"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="15px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/botonSuma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15px"
            android:layout_weight="1"
            android:backgroundTint="#C1C1C1"
            android:text="+"
            android:textColor="#000000"
            android:textColorLink="#C1C1C1"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="15px" />

        <Button
            android:id="@+id/botonIgual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15px"
            android:layout_weight="1"
            android:backgroundTint="#C1C1C1"
            android:text="="
            android:textColor="#000000"
            android:textColorLink="#C1C1C1"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="15px" />

        <Button
            android:id="@+id/botonResta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15px"
            android:layout_weight="1"
            android:backgroundTint="#C1C1C1"
            android:text="-"
            android:textColor="#000000"
            android:textColorLink="#C1C1C1"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="15px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/botonReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15px"
            android:layout_weight="1"
            android:backgroundTint="#C1C1C1"
            android:text="Clear"
            android:textColor="#000000"
            android:textColorLink="#C1C1C1"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="15px" />
    </LinearLayout>

</LinearLayout>